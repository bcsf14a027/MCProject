<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout


        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        tools:context="com.example.sabeenmustafa.mcproject1.metricCalActivity">



        <TextView
            android:id="@+id/tv_type_metric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:text="METRIC BMI "
            android:textSize="@dimen/text_size"

            android:padding="@dimen/padoftext"
            android:layout_toRightOf="@+id/et_sugar"
            />

        <EditText
            android:id="@+id/height_centimeter"
            android:hint="height(ft)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal"
            />

        <EditText
            android:id="@+id/weight_kilogram"
            android:hint="weight(kgs)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal"
            />


        <Button
            android:id="@+id/calculate_metric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate" />

        <TextView
            android:id="@+id/result_metric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"

            android:text="Result"
            android:textSize="@dimen/text_size"
            />

        <TextView
            android:id="@+id/tv_type_imperial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:text="IMPERIAL BMI "
            android:textSize="@dimen/text_size"

            android:padding="@dimen/padoftext"
            android:layout_toRightOf="@+id/et_sugar"
            />

        <EditText
            android:id="@+id/height_inches"
            android:hint="height(inches)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal"
            />

        <EditText
            android:id="@+id/weight_pounds"
            android:hint="weight(pounds)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal"
            />


        <Button
            android:id="@+id/calculate_imperial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate" />

        <TextView
            android:id="@+id/result_imperial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"

            android:text="Result"
            android:textSize="@dimen/text_size"
            />
    </LinearLayout>

</ScrollView>